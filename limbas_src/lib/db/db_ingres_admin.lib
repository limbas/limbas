}



############# primary keys ########################

/**
 * get primary keys
 *
 * @param array $p [0]=schema, [1]=table, [2]=dbname
 * @return sql string
 */
function dbq_23($p){
	global $db;
	
	$rs = odbc_primarykeys($db, $p[2], $p[0], $p[1]);
	while(odbc_fetch_row($rs)){
		$pri_key["COLUMN_NAME"][] = odbc_result($rs,"COLUMN_NAME");
		$pri_key["PK_NAME"][] = odbc_result($rs,"PK_NAME");
	}
	return  $pri_key;
}

/**
 * create primary key
 *
 * @param array $p [0]=table, [1]=field
 * @return sql string
 */
function dbq_17($p){
	return "ALTER TABLE ".$p[0]." ADD PRIMARY KEY (".$p[1].")";
}

/**
 * drop primary key
 *
 * @param array $p [0]=table
 * @return sql string
 */
function dbq_18($p){
	global $db;
	global $DBA;
	
	$sql = dbq_2(array($DBA["DBUSER"],$p[0],null,2));
	$rs = odbc_exec($db,$sql);
	$indexname = odbc_result($rs, "INDEXNAME");
	if($indexname){
		return "ALTER TABLE ".$p[0]." DROP CONSTRAINT ".$indexname;
	}
	return false;
}

