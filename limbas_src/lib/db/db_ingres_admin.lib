/**
 * list of tables / views
 *
 * @param array $p [0]=schema, [1]=name, [2]=typ
 * @return sql string
 */
function dbf_20($p){
	global $db;

	if(!$p[1]){$p[1] = "%";}
	$rs = odbc_tables($db,null,$p[0],dbf_4($p[1]),$p[2]);
	while(odbc_fetch_row($rs)){
		$odbc_table["table_name"][] = odbc_result($rs,"TABLE_NAME");
		$odbc_table["table_type"][] = odbc_result($rs,"TABLE_TYPE");
	}
	
	if(!$odbc_table){
		return false;
	}else{
		return $odbc_table;
	}

}

############# columns ########################


/**
 * existing columns
 *
 * @param array $p [0]=schema, [1]=tablename, [2]=fieldname, [3]=with key
 * @return sql string
 */
function dbf_5($p,$mode=null){
	global $db;
	
	
	if($p[2]){
		$rs = odbc_columns($db,null,$p[0],dbf_4($p[1]),dbf_4($p[2]));
	}else{
		$rs = odbc_columns($db,null,$p[0],dbf_4($p[1]));
	}
	
	if($p[3]){return $rs;}
	
	if($mode){
		$sql2 = dbq_2(array($p[0],$p[1],null,2,null));
		$rs2 = odbc_exec($db,$sql2);
		while(odbc_fetch_row($rs2)) {
			if(odbc_result($rs2, "INDEXNAME")){
				$key[odbc_result($rs2, "COLUMNNAME")] = 1;
			}
		}
	}

	$sql = "SELECT * FROM IICOLUMNS WHERE TABLE_OWNER = '".$p[0]."' AND LOWER(TABLE_NAME) = '".lmb_strtolower($p[1])."'";
	if($p[2]){
		$sql .= " AND LOWER(COLUMN_NAME) = '".lmb_strtolower($p[2])."'";
	}
	$rs = odbc_exec($db,$sql);
	while(odbc_fetch_row($rs)) {
		$col["tablename"][] = dbf_4(trim(odbc_result($rs, "TABLE_NAME")));
		$col["columnname"][] = dbf_4(trim(odbc_result($rs, "COLUMN_NAME")));
		$col["columnname_lower"][] = dbf_4(trim(odbc_result($rs, "COLUMN_NAME")));
		$col["datatype"][] = str_replace(" ","_",trim(odbc_result($rs, "COLUMN_DATATYPE")));
		$col["length"][] = trim(odbc_result($rs, "COLUMN_LENGTH"));
		$col["default"][] = trim(odbc_result($rs, "COLUMN_DEFAULT_VAL"));
		
		if($mode){
			if($key[trim(odbc_result($rs, "COLUMN_NAME"))]){
				$col["mode"][] = "KEY";
			}else{
				$col["mode"][] = null;
			}
		}
	}
	
	if($col){
		return $col;
	}else{
		return false;
	}
}

