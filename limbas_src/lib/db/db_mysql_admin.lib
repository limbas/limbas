 * @param array $p [0]=schema, [1]=table, [2]=dbname
 * @return sql string
 */
function dbq_26($p=null){
	global $db;
	
	$sql = "SELECT
	    KEY_COLUMN_USAGE.CONSTRAINT_NAME, KEY_COLUMN_USAGE.TABLE_NAME, KEY_COLUMN_USAGE.COLUMN_NAME, 
