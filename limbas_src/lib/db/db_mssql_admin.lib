 */
function dbf_3($p){
	global $db;	

/*	$sql = "SELECT TRIGGERNAME,DEFINITION,TABLENAME,INSERT,UPDATE,DELETE
		FROM
		 	DOMAIN.TRIGGERS"; */
	/*$sql = "SELECT tr.name AS TRIGGERNAME, object_definition(tr.object_id) AS DEFINITIONdefinition , allobj.name 
