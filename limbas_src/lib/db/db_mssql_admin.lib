		$rs1 = lmbdb_exec($db,dbq_2(array($DBA["DBSCHEMA"],dbf_4($p[1]),null,2)));
		while(lmbdb_fetch_row($rs1)){
			$key[lmb_strtolower(trim(lmbdb_result($rs1, "COLUMNNAME")))] = 'PRIMARY KEY';
		}
	}
	
	if($p[2]){
		$rs = lmbdb_columns($db,null,$p[0],dbf_4($p[1]),dbf_4($p[2]));
