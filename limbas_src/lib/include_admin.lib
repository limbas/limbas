# --- get dependency tree of views -----------------------------------
function lmb_checkViewDependency($tablename,$fieldname=null,$clear=null,$rec=false){
    static $dependency;
    global $DBA;

    if(!$dependency OR !$clear){$dependency = array();}
    
    if($dep = dbf_25(array($DBA['DBSCHEMA'],$tablename,$fieldname))){
        foreach($dep as $key => $value){
            if(!in_array($value,$dependency)){
                array_push($dependency,$value);
                if($rec){
                    lmb_checkViewDependency($value,null,1,1);
                }
            }
        }
    }
    
    return array_unique($dependency);
}


function lmb_getSubView($value, $level, $clear = 0){
    global $DBA;
    static $dependency;
    
    if ($clear) {
        $dependency = array();
    }
    
    if ($dep = lmb_checkViewDependency($value)) {
        $level ++;
        foreach ($dep as $k => $v) {
            $dependency[$v] = $level;
            lmb_getSubView($v, $level);
        }
    }
    return $dependency;
}

/*
 * get dependent view list
 */
function lmb_getViewDependency($arsort=0){
    global $DBA;

    $tables = dbf_20(array($DBA['DBSCHEMA'],null,'TABLE'));
    $tables = $tables["table_name"];
    $dependency = array();
    foreach($tables as $key => $value){
        if($dep = lmb_checkViewDependency($value)){
            $dependency_ = lmb_getSubView($value,0,1);
            foreach($dependency_ as $dkey => $dval){
                if(!$dependency[$dkey] OR $dependency[$dkey] < $dval){
                    $dependency[$dkey] = $dval;
                }
            }
        }
    }
    if($arsort){
        arsort($dependency);
    }else{
        asort($dependency);
    }
    return $dependency;
}


/*
 * remember & drop dependent views
 */
function lmb_dropDependViews($dep){

    if(!$dep){return;}
    lmb_StartTransaction();
    
    // sort by dependency
    krsort($dep);

    foreach ($dep as $key => $viewname) {
        if ($def[$viewname] = lmb_getViewDef($viewname)) {
            if (!lmb_dropView($viewname)) {
                lmb_alert("drop view \"$viewname\" failed!\n try to drop it manually!");
                $commit = 1;
                break;
            }
            # else {
            #    lmb_alert("drop view \"$viewname\"!");
            #}
        }
    }
    
    if ($commit) {
        lmb_EndTransaction(0);
        return false;
    } else {
        lmb_EndTransaction(1);
        return array_reverse($def);
    }
}


/*
 * remember & drop dependent views
 */
function lmb_addDependViews($viewdef){

    if(!$viewdef){return;}
    
    foreach ($viewdef as $viewname => $query) {
        if (!lmb_createView($query, $viewname)) {
            lmb_alert("create view \"$viewname\" failed!\n try to create it manually!");
            $commit = 1;
        }
        #else{
        #    lmb_alert("add view \"$viewname\"!");
        #}
    }
    
    if($commit){return false;}
    return true;
}


