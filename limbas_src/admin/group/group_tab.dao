			elseif($srule[2] == 28){
				global ${"tabuserprivilege_".$srule[0]};
				if(${"tabuserprivilege_".$srule[0]}){$perm = LMB_DBDEF_TRUE;} else {$perm = LMB_DBDEF_FALSE;}
