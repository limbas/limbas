                        $f_result[$key]["specificprivilege"]["delete_$key"][] = preg_replace("/[ved]/", "", $spval);
                    }
                }
            }
        }
        $bzm1 = 1;
        while (odbc_fetch_row($rs, $bzm1)) {
            $field_id = odbc_result($rs, "FIELD_ID");
            if ($s_result[$key]["view"][$field_id] or ! $s_result) {
                $f_result[$key]["field_id"][$field_id] = $field_id;
                $f_result[$key]["field"][$field_id] = odbc_result($rs, "FIELD_NAME");
                $f_result[$key]["spelling"][$field_id] = $lang[odbc_result($rs, "SPELLING")];
                $f_result[$key]["beschreibung"][$field_id] = $lang[odbc_result($rs, "BESCHREIBUNG")];
                $f_result[$key]["typ"][$field_id] = odbc_result($rs, "DATA_TYPE_EXP");
                $f_result[$key]["view"][$field_id] = odbc_result($rs, "LMVIEW");
                $f_result[$key]["edit"][$field_id] = odbc_result($rs, "EDIT");
                $f_result[$key]["need"][$field_id] = odbc_result($rs, "NEED");
                $f_result[$key]["copy"][$field_id] = odbc_result($rs, "COPY");
                $f_result[$key]["option"][$field_id] = odbc_result($rs, "FIELDOPTION");
                $f_result[$key]["versionable"][$field_id] = odbc_result($rs, "VER");
                $f_result[$key]["color"][$field_id] = odbc_result($rs, "COLOR");
                $f_result[$key]["nformat"][$field_id] = odbc_result($rs, "NFORMAT");
                $f_result[$key]["currency"][$field_id] = odbc_result($rs, "CURRENCY");
                $f_result[$key]["ext_type"][$field_id] = odbc_result($rs, "EXT_TYPE");
                $f_result[$key]["filter"][$field_id] = trim(odbc_result($rs, "FILTER"));
                $f_result[$key]["filtertyp"][$field_id] = odbc_result($rs, "FILTERTYP");
                $f_result[$key]["editrule"][$field_id] = htmlentities(odbc_result($rs, "EDITRULE"), ENT_QUOTES, $GLOBALS["umgvar"]["charset"]); // longtext handle
                $f_result[$key]["field_trigger"][$field_id] = explode(",", odbc_result($rs, "FIELDTRIGGER"));
                $f_result[$key]["sort"][$field_id] = odbc_result($rs, "SORT");
                $f_result[$key]["field_type"][$field_id] = odbc_result($rs, "FIELD_TYPE");
                $f_result[$key]["data_type"][$field_id] = odbc_result($rs, "DATA_TYPE");
                $f_result[$key]["def"][$field_id] = odbc_result($rs, "DEFLT");
                $f_result[$key]["argument_typ"][$field_id] = odbc_result($rs, "ARGUMENT_TYP");
            }
            $bzm1 ++;
        }
    }
