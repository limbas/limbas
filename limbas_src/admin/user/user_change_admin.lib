function create_user($userdata){
	global $db;
	global $session;
	global $umgvar;
	global $passwort;
	global $lang;

	$username = $userdata["username"];
	$passwort = $userdata["passwort"];
	$email = $userdata["email"];
	$vorname = $userdata["vorname"];
	$name = $userdata["name"];
	$beschreibung = $userdata["beschreibung"];
	$group_id = $userdata["group_id"];
	$subgroup = $userdata["subgroup"];
	$layout = $userdata["layout"];
	$results = $userdata["results"];
	$uloadsize = $userdata["uloadsize"];
	$usercolor = $userdata["usercolor"];
	$language = $userdata["language"];
	$dateformat = $userdata["dateformat"];
	$timezone = $userdata["timezone"];
	$setlocale = $userdata["setlocale"];
	$loglevel = $userdata["loglevel"];
	
	if(!$layout){$layout = $umgvar['default_layout'];}
	if(!$results){$results = $umgvar['default_results'];}
	if(!$uloadsize){$uloadsize = ($umgvar['default_uloadsize']*1024*1024);}
	if(!$coloschema){$coloschema = $umgvar['default_usercolor'];}
	if(!$language){$language = $umgvar['default_language'];}
	if(!$dateformat){$dateformat = $umgvar['default_dateformat'];}
	if(!$timezone){$timezone = $umgvar['default_timezone'];}
	if(!$setlocale){$setlocale = $umgvar['default_setlocale'];}
	if(!$loglevel){$loglevel = $umgvar['default_loglevel'];}

	if(!$group_id OR !$username OR !$passwort){lmb_alert($lang[605]);return false;}

	/* --- Tabellen Array -------------------------------------- */
	$sqlquery = "Select * from LMB_CONF_TABLES ORDER BY TAB_GROUP,TAB_ID";
	$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
	if(!$rs) {$commit = 1;}
	$bzm = 1;
	while(odbc_fetch_row($rs,$bzm)) {
		$tabname[] = odbc_result($rs,"TABELLE");
		$tabid[] = odbc_result($rs,"TAB_ID");
		$tabgroup[] = odbc_result($rs,"TAB_GROUP");
		$tabsplelling[] = odbc_result($rs,"BESCHREIBUNG");
		$tabgrpid[] = odbc_result($rs,"TAB_ID").odbc_result($rs,"TAB_GROUP");
		$bzm++;
	}
	
	$username = str_replace(" ","",parse_db_string($username,50));
	$passwort = str_replace(" ","",parse_db_string($passwort,50));

	/* --- SUCHE ob schon vorhanden --------------------------------------------- */
	$sqlquery = "SELECT USER_ID,NAME,VORNAME FROM LMB_USERDB WHERE LOWER(USERNAME) = '".strtolower($username)."'";
	$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
	if(!$rs) {$commit = 1;}
	if(odbc_fetch_row($rs, 1)) {
		$GLOBALS["user_exists"] = 1;
		lmb_alert($lang[606]);
		return false;
	}else{
		/* --- Standard Farbschema auslesen --------------------------------------------- */
		$sqlquery = "SELECT ID FROM LMB_COLORSCHEMES WHERE NORM = ".LMB_DBDEF_TRUE;
		$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
		if(!$rs) {$commit = 1;}
		if(!$coloschema){$coloschema = odbc_result($rs, "ID");}

		/* --- Next ID ---------------------------------------- */
		$NEXTID = next_db_id("LMB_USERDB","USER_ID");
		$sqlquery = "INSERT INTO LMB_USERDB (ID,USER_ID,USERNAME,PASSWORT,GROUP_ID,SUB_GROUP,EMAIL,VORNAME,NAME,BESCHREIBUNG,DATA_HIDE,DATA_DISPLAY,IPRANGE,DEL,
		 LAYOUT,MAXRESULT,UPLOADSIZE,FARBSCHEMA,LANGUAGE,DATEFORMAT,TIME_ZONE,SETLOCAL,LOGGING) VALUES($NEXTID,$NEXTID,'$username','".md5($passwort)."',$group_id,'$subgroup','$email','$vorname','$name','$beschreibung',1,2,'',".LMB_DBDEF_FALSE.",
		'".parse_db_string($layout)."',".parse_db_int($results).",".parse_db_int($uloadsize).",'".parse_db_string($coloschema)."',".parse_db_int($language).",".parse_db_int($dateformat).",'".parse_db_string($timezone)."','".parse_db_string($setlocale)."',".parse_db_int($loglevel).")";
		$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
		if(!$rs) {$commit = 1;}
		$ID = $NEXTID;

		# --- User Verzeichnis hinzufügen -------
		if(!create_user_folder($ID,$username,$passwort)){$commit = 1;}
		# --- Standard Ordner anlegen ---------------
		if(!create_user_dir($ID,$group_id)){$commit = 1;}
	}

	if(!$commit){return $ID;}else{$GLOBALS["commit"] = 1;return false;}
}

/* --- User ändern --------------------------------------------- */
function user_change($ID,$userdata,$file=0,$user_add=0){
	global $umgvar;
	global $db;
	global $lang;
	
	if(!$userdata["username"]){lmb_alert($lang[605]);return false;}
	if(isset($userdata["group_id"]) AND !$userdata["group_id"]){lmb_alert($lang[605]);return false;}

	$sqlquery = "UPDATE LMB_USERDB SET EDITDATUM = ".LMB_DBDEF_TIMESTAMP.",";

	if($userdata["passwort"] AND $userdata["username"]){
		if(!$user_add){
			$sqlquery1 = "SELECT USER_ID,NAME,VORNAME,GROUP_ID FROM LMB_USERDB WHERE LOWER(USERNAME) = '".strtolower($userdata["username"])."'";
			$rs1 = odbc_exec($db,$sqlquery1) or errorhandle(odbc_errormsg($db),$sqlquery1,$action,__FILE__,__LINE__);
			if(!$rs1) {$commit = 1;}
			if(odbc_result($rs1,"USER_ID") AND odbc_result($rs1,"USER_ID") != $ID) {
				lmb_alert($lang[606]);
				return false;
			}
		}
		
		$sqlquery .= "USERNAME = '".parse_db_string($userdata["username"],50)."',";
		$sqlquery .= "PASSWORT = '".md5($userdata["passwort"])."',";
		lmb_htaccess($ID,$userdata["username"],$userdata["passwort"]);
		if($umgvar["clear_password"]){
			$sqlquery .= "CLEARPASS = '".$userdata["passwort"]."',";
		}

	}
	
	if($userdata["vorname"]){$sqlquery .= "VORNAME = '".parse_db_string($userdata["vorname"],50)."',";}
	if($userdata["name"]){$sqlquery .= "NAME = '".parse_db_string($userdata["name"],50)."',";}
	if($userdata["email"]){$sqlquery .= "EMAIL = '".parse_db_string($userdata["email"],50)."',";}
	if($userdata["tel"]){$sqlquery .= "TEL = '".parse_db_string($userdata["tel"],25)."',";}
	if($userdata["fax"]){$sqlquery .= "FAX = '".parse_db_string($userdata["fax"],25)."',";}
	if($userdata["position"]){$sqlquery .= "POSITION = '".parse_db_string($userdata["position"],50)."',";}
	if($userdata["beschreibung"]){$sqlquery .= "BESCHREIBUNG = '".parse_db_string($userdata["beschreibung"],255)."',";}
	if($userdata["group_id"]){$sqlquery .= "GROUP_ID = ".$userdata["group_id"].",";}
	if($userdata["sub_group"]){$sqlquery .= "SUB_GROUP = '".implode(";",$userdata["sub_group"])."',";}else{$sqlquery .= "SUB_GROUP = '',";}
	if($userdata["usercolor"]){$sqlquery .= "USERCOLOR = '".parse_db_string($userdata["usercolor"],6)."',";}
	if($userdata["maxresult"]){$sqlquery .= "MAXRESULT = ".$userdata["maxresult"].",";}else{$sqlquery .= "MAXRESULT = 15,";}
	if($userdata["uploadsize"]){$sqlquery .= "UPLOADSIZE = ".($userdata["uploadsize"] * 1048576).",";}else{$sqlquery .= "UPLOADSIZE = 1048576,";}
	if($userdata["language"]){$sqlquery .= "LANGUAGE = ".$userdata["language"].",";}
	if($userdata["layout"]){$sqlquery .= "LAYOUT = '".parse_db_string($userdata["layout"],20)."',";}
	$sqlquery .= "LOCK_TXT = '".parse_db_string($userdata["locktxt"],500)."',";
	if($userdata["change_pass"]){$sqlquery .= "CHANGE_PASS = ".parse_db_bool($userdata["change_pass"]).",";}
	if($userdata["data_display"]){$sqlquery .= "DATA_DISPLAY = ".$userdata["data_display"].",";}
	if($userdata["farbe_schema"]){$sqlquery .= "FARBSCHEMA = ".$userdata["farbe_schema"].",";}
	if($userdata["dateformat"]){$sqlquery .= "DATEFORMAT = ".$userdata["dateformat"].",";}
	if($userdata["timezone"]){$sqlquery .= "TIME_ZONE = '".parse_db_string($userdata["timezone"],20)."',";}
	if($userdata["setlocale"]){$sqlquery .= "SETLOCAL = '".parse_db_string($userdata["setlocale"],15)."',";}
	$sqlquery .= "LOGGING = ".$userdata["logging"].",";
	$sqlquery .= "GC_MAXLIFETIME = ".parse_db_int( round(parse_db_float($userdata["gc_maxlifetime"])*60*60*24) ,10).",";
	if($userdata["iprange"]){$sqlquery .= "IPRANGE = '".preg_replace("/[a]{1,}/","\n",str_replace("\n","a",preg_replace("/[^0-9\.a\*]/","\n",$userdata["iprange"])))."',";}
	if($userdata["subadmin"]){$sqlquery .= "SUBADMIN = ".LMB_DBDEF_TRUE.",";}else{$sqlquery .= "SUBADMIN = ".LMB_DBDEF_FALSE.",";}
	if($userdata["validdate"] AND convert_date($userdata["validdate"])){
		$validdate = $userdata["validdate"]." 23.59.59";
		$sqlquery .= "VALIDDATE = '".convert_date($validdate)."',VALID = ".LMB_DBDEF_TRUE;
	}else{$sqlquery .= "VALIDDATE = ".LMB_DBDEF_DTNULL.",VALID = ".LMB_DBDEF_FALSE;}

	$sqlquery .= " WHERE USER_ID = $ID";
	
	$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);

}


function getUserDetails($ID){
	global $db;
	global $umgvar;

	$sqlquery = "SELECT DISTINCT LMB_USERDB.SUPERADMIN,LMB_USERDB.TEL,LMB_USERDB.FAX,LMB_USERDB.POSITION,LMB_USERDB.TIME_ZONE,LMB_USERDB.STATIC_IP,LMB_USERDB.GC_MAXLIFETIME,LMB_USERDB.CLEARPASS,LMB_USERDB.LOCKBACKEND,LMB_USERDB.USERCOLOR,LMB_USERDB.VALIDDATE,LMB_USERDB.LMLOCK,LMB_USERDB.LOGGING,LMB_USERDB.LOCK_TXT,LMB_USERDB.DEBUG,LMB_USERDB.SUBADMIN,LMB_USERDB.USERNAME,LMB_USERDB.CHANGE_PASS,LMB_USERDB.SUB_GROUP,LMB_USERDB.IPRANGE,LMB_USERDB.GROUP_ID,LMB_USERDB.UPLOADSIZE,LMB_USERDB.LAYOUT,LMB_USERDB.LANGUAGE,LMB_USERDB.DATA_DISPLAY,LMB_USERDB.PASSWORT,LMB_USERDB.USER_ID,LMB_USERDB.VORNAME,LMB_USERDB.NAME,LMB_USERDB.EMAIL,LMB_USERDB.BESCHREIBUNG,LMB_USERDB.FARBSCHEMA,LMB_USERDB.MAXRESULT,LMB_USERDB.ERSTDATUM,LMB_USERDB.EDITDATUM,LMB_GROUPS.NAME AS GROUPNAME,LMB_GROUPS.GROUP_ID 
	FROM LMB_USERDB LEFT JOIN LMB_GROUPS ON (LMB_USERDB.GROUP_ID = LMB_GROUPS.GROUP_ID)
	WHERE USER_ID = $ID";
	$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);

	if(odbc_fetch_row($rs, 1)) {
		$result_user["username"] = odbc_result($rs, "USERNAME");
		$result_user["passwort"] = odbc_result($rs, "PASSWORT");
		$result_user["user_id"] = odbc_result($rs, "USER_ID");
		$result_user["vorname"] = odbc_result($rs, "VORNAME");
		$result_user["name"] = odbc_result($rs, "NAME");
		$result_user["email"] = odbc_result($rs, "EMAIL");
		$result_user["tel"] = odbc_result($rs, "TEL");
		$result_user["fax"] = odbc_result($rs, "FAX");
		$result_user["position"] = odbc_result($rs, "POSITION");
		$result_user["beschreibung"] = odbc_result($rs, "BESCHREIBUNG");
		$result_user["group_id"] = odbc_result($rs, "GROUP_ID");
		if(odbc_result($rs, "SUB_GROUP")){$result_user["sub_group"] = explode(";",odbc_result($rs, "SUB_GROUP"));}
		$result_user["gruppe"] = odbc_result($rs, "GROUPNAME");
		$result_user["gruppen_id"] = odbc_result($rs, "GROUP_ID");
		$result_user["data_display"] = odbc_result($rs, "DATA_DISPLAY");
		$result_user["farbschema"] = odbc_result($rs, "FARBSCHEMA");
		$result_user["language"] = odbc_result($rs, "LANGUAGE");
		$result_user["layout"] = odbc_result($rs, "LAYOUT");
		$result_user["maxresult"] = odbc_result($rs, "MAXRESULT");
		$result_user["change_pass"] = odbc_result($rs, "CHANGE_PASS");
		$result_user["uploadsize"] = (odbc_result($rs, "UPLOADSIZE")/1048576);
		$result_user["iprange"] = odbc_result($rs, "IPRANGE");
		$result_user["erstdatum"] = get_date(odbc_result($rs, "ERSTDATUM"),2);
		$result_user["editdatum"] = get_date(odbc_result($rs, "EDITDATUM"),2);
		$result_user["subadmin"] = odbc_result($rs, "SUBADMIN");
		$result_user["lock"] = odbc_result($rs, "LMLOCK");
		$result_user["lockbackend"] = odbc_result($rs, "LOCKBACKEND");
		$result_user["debug"] = odbc_result($rs, "DEBUG");
		$result_user["logging"] = odbc_result($rs, "LOGGING");
		$result_user["locktxt"] = odbc_result($rs, "LOCK_TXT");
		$result_user["validdate"] = get_date(odbc_result($rs, "VALIDDATE"),1);
		$result_user["usercolor"] = odbc_result($rs, "USERCOLOR");
		$result_user["clearpass"] = odbc_result($rs, "CLEARPASS");
		$result_user["gc_maxlifetime"] = round(odbc_result($rs, "GC_MAXLIFETIME")/60/60/24,2);
		$result_user["staticip"] = odbc_result($rs, "STATIC_IP");
		$result_user["timezone"] = odbc_result($rs, "TIME_ZONE");
		$result_user["superadmin"] = odbc_result($rs, "SUPERADMIN");
		
		# --- Passwort Gültig ----
		#$v_val = mktime(0,0,0,date("m"),date("d") + $result_user[valid],date("Y"));
		#$v_pass = get_stamp($result_user[validdate]);

		#$v_pass - $v_now;

		$sqlquery2 = "SELECT MAX(UPDATE_DATE) AS LASTKLICK FROM LMB_HISTORY_USER WHERE USERID = ".odbc_result($rs, "USER_ID")." AND UPDATE_DATE IS NOT NULL";
		$rs2 = odbc_exec($db,$sqlquery2) or errorhandle(odbc_errormsg($db),$sqlquery2,$action,__FILE__,__LINE__);
		if(!$rs2) {$commit = 1;}
		if(odbc_fetch_row($rs2, 1)){
			$lastklick = mktime(substr(odbc_result($rs2, "LASTKLICK"),11,2), substr(odbc_result($rs2, "LASTKLICK"),14,2) + $umgvar[session_length], substr(odbc_result($rs2, "LASTKLICK"),17,2), substr(odbc_result($rs2, "LASTKLICK"),5,2), substr(odbc_result($rs2, "LASTKLICK"),8,2), substr(odbc_result($rs2, "LASTKLICK"),0,4));
			$stamp = local_stamp(2);
			if($lastklick >= $stamp){$result_user["aktiv"] = sprintf("%.2f",($lastklick - $stamp)/60);}
		}

	}
	
	return $result_user;
	
}



function mailUserInfo($result_user,$send_usermail,$userdata=null){
	global $groupdat;
	global $user_add;
	global $db;
	global $umgvar;
	global $session;
	
	
	if(is_numeric($result_user)){
		$result_user = getUserDetails($result_user);
	}

	if($result_user["email"]){
	    if($result_user["sub_group"]){$group = $result_user["sub_group"];}
		$group[] = $result_user["group_id"];
		$group = array_unique($group);
		$boundary = strtoupper(md5(uniqid(time())));
		
		foreach ($group as $key => $value){
			if($groupdat["name"][$value]){
				$groupmessage .= $groupdat["name"][$value]." (".$groupdat["beschreibung"][$value].")<br>";
			}
		}

		if($user_add){
			$welcomemessage = "Welcome to your new Limbas Account.<br>
			This email informs you how to login in Limbas.<br><br>";
		}else{
			$welcomemessage = "Your Limbas Account changed!
			This email informs you about news.<br><br>
			";
		}
		
		if($userdata['passwort']){
			$passmessage = $userdata['passwort'];
		}elseif($result_user["clearpass"]){
			$passmessage = $result_user["clearpass"];
		}

		if($umgvar["password_as_image"] AND $passmessage){
			$passimage = paintTextToImage($passmessage,12);
			$passmessage = "<img alt=\"\" src=\"cid:1259\">";
		}else{
			$nopass = 1;
		}

		$settingsmessage = "name: ".$result_user["vorname"]." ".$result_user["name"]."<br>";
		if($result_user["erstdatum"]){$settingsmessage .= "created: ".$result_user["erstdatum"]."<br>";}
		if($result_user["email"]){$settingsmessage .= "email: ".$result_user["email"]."<br>";}
		if($result_user["farbschema"]){
			$sqlquery = "SELECT NAME FROM LMB_COLORSCHEMES WHERE ID = ".parse_db_int($result_user["farbschema"]);
			$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
			$settingsmessage .= "color: ".odbc_result($rs,"NAME")."<br>";
		}
		if($result_user["language"]){
			$sqlquery = "SELECT DISTINCT LANGUAGE FROM LMB_LANG WHERE LANGUAGE_ID = ".$result_user["language"];
			$rs = odbc_exec($db,$sqlquery) or errorhandle(odbc_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
			$settingsmessage .= "language: ".odbc_result($rs,"LANGUAGE")."<br>";
		}
		if($result_user["layout"]){$settingsmessage .= "layout: ".$result_user["layout"]."<br>";}
		if($result_user["maxresult"]){$settingsmessage .= "maxresult: ".$result_user["maxresult"]."<br>";}
		if($result_user["uploadsize"]){$settingsmessage .= "uploadsize: ".$result_user["uploadsize"]." MB<br>";}
		if($result_user["iprange"]){$settingsmessage .= "iprange: ".$result_user["iprange"]."<br>";}


		$body="<html><FONT COLOR=\"#0000FF\" SIZE=\"3\" FACE=\"Arial\">Your Limbas Account</FONT><br><br>
		<FONT SIZE=\"2\" FACE=\"Arial\">
		Dear <b>".$result_user['vorname']." ".$result_user['name']."</b><br>";
		$subject = "$body
		$welcomemessage<br>
		".nl2br($result_user["locktxt"])."<br>
		<br><u>Your Login</u><br>
		username: ".$result_user["username"]."<br>";
		if(!$nopass){
			$subject .= "password: ".$passmessage."<br><br>";
		}
		$subject .= "
		Your baselink to limbas:<A HREF=\"".$umgvar["url"]."\">".$umgvar["url"]."</A><br>
		".nl2br($result_user["beschreibung"])."<br><br>
		<u>Your authorized Groups:</u><br>
		$groupmessage<br>
		<u>Your Settings</u><br>
		$settingsmessage

		<br><br>
		This Message was automatically generated by Limbas!<br>
		</html>\n\n";
		
		
		if(file_exists($passimage)){
			$handle = fopen($passimage, "r");
			$attach_content = chunk_split(base64_encode(fread($handle, filesize($passimage))));
			fclose($handle);
			$subject .= "\n--" . $boundary . "\n";
			$subject .= "Content-ID:1259\n";
			$subject .= "Content-Type: image/jpeg; name=\"textimage.png\"\n";
			$subject .= "Content-Transfer-Encoding: base64\n";
			$subject .= "Content-Disposition: attachment; filename=\"textimage.png\"\n\n";
			$subject .= $attach_content;
			$subject .= "\n--" . $boundary . "\n";
		}

		
		
		$headers = "From: support@limbas.com \r\n";
		$headers .= "MIME-Version: 1.0 \n";
		$headers .= "Content-Transfer-Encoding: 7bit\n";
		$headers .= "Content-Type: multipart/related; boundary=\"$boundary\"\n\n";
		$headers .= "--" . $boundary . "\n";
		$headers .= "Content-Type: text/html; charset=ISO-8859-1 \n";
		$headers .= "Content-Transfer-Encoding: 7bit\n";

		if($send_usermail){
			if(mail($result_user["email"], "Limbas User-Information", $subject, $headers)){
				$success = 1;
				lmb_alert("login-information was send successfully to user: ".$result_user['username']);
			}else{
				lmb_alert("failed to send user Information for user: ".$result_user['username']);
				$success = 0;
			}
		}
	}

	if($umgvar["send_userchanges"]){
		$body="<html><FONT COLOR=\"#0000FF\" SIZE=\"3\" FACE=\"Arial\">Limbas Account for <b>".$result_user['vorname']." ".$result_user['name']."</b></FONT><br><br>
		<FONT SIZE=\"2\" FACE=\"Arial\">";

		if($user_add){
			$welcomemessage = "New Limbas Account by ".$session["vorname"]." ".$session["name"].".<br>";
			$passmessage = $passwort;
		}else{
			$welcomemessage = "Limbas Account changed by ".$session["vorname"]." ".$session["name"]."!<br>
			";
		}

		$subject = "$body
		$welcomemessage
		<br><u>Login</u><br>
		username: ".$result_user["username"]."<br>
		baselink to limbas:<A HREF=\"".$umgvar["url"]."\">".$umgvar["url"]."</A><br>
		".nl2br($result_user["beschreibung"])."<br><br>
		<u>authorized Groups:</u><br>
		$groupmessage<br>
		<u>Settings</u><br>
		$settingsmessage

		<br><br>
		This Message was automatically generated by Limbas!<br>
		</html>";

		$headers = "From: support@limbas.com \r\n";
		$headers.= "Content-Type: text/html; charset=ISO-8859-1 ";
		$headers .= "MIME-Version: 1.0 ";

		$mailto = explode(" ",$umgvar["send_userchanges"]);
		foreach ($mailto as $key => $mail){
			return;
			if(mail($mail, "Limbas User-Information", $subject, $headers)){
				$success = 1;
				#lmb_alert("login-information was send successfully to user: ".$userdat["username"][$key]);
			}else{
				#lmb_alert("failed to send user Information for user: ".$userdat["username"][$key]);
				$success = 0;
			}
		}
	}
	
	if($success){
		return true;
	}else{
		return false;
	}
}
