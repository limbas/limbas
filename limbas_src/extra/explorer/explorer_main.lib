				}elseif($gfile["name"][$gkey] == "LOCK"){
					if($ffile[$gkey][$key]){$CHECKED = "CHECKED";}else{$CHECKED = "";}
					if($filestruct["edit"][$LID]){$READONLY = "READONLY";}else{$READONLY = "";}
					echo "<TD class=\"gtabBodyTD\" VALIGN=\"TOP\" ALIGN=\"CENTER\"><DIV ID=\"td_".$key1."_".$key2."\" STYLE=\"overflow:hidden;white-space:nowrap;width:".$ffilter["rowsize"][$LID][$key1]."px;\">&nbsp;<input type=\"checkbox\" NAME=\"files_status[".$ffile["id"][$key]."][lock]\" OnChange=\"document.getElementById('filestatus_d_".$LID."_".$key."').value=2;\" $CHECKED $READONLY>&nbsp;</DIV></TD>\n";
					# all Boolean
				}elseif($gfile['typ'][$key1] == 3){
					echo "<TD class=\"gtabBodyTD\" ID=\"td_".$key1."_".$key2."\" VALIGN=\"TOP\" ALIGN=\"$align\"><DIV ID=\"td_".$key1."_".$key2."\" STYLE=\"overflow:hidden;white-space:nowrap;width:".$ffilter["rowsize"][$LID][$key1]."px;\">&nbsp;";
					if($ffile[$gkey][$key]){echo "<i class=\"lmb-icon lmb-aktiv\"></i>";}
					echo "&nbsp;</DIV></TD>";
				}else{
					if($key1 <= 10){$nowrap = "white-space:nowrap;";}else{$nowrap = "";}
					echo "<TD class=\"gtabBodyTD\" VALIGN=\"TOP\" ALIGN=\"$align\"><DIV ID=\"td_".$key1."_".$key2."\" STYLE=\"overflow:hidden;width:".$ffilter["rowsize"][$LID][$key1]."px;$nowrap\">&nbsp;".htmlentities($ffile[$gkey][$key],ENT_QUOTES,$umgvar["charset"])."&nbsp;</DIV></TD>\n";
				}
			}

			echo "</TR>";
			# Metadaten / Versionierung
			echo "<TR style=\"display:none;\"><TD ID=\"files_meta_$key\" style=\"display:none;\" colspan=\"$colspan\"></TD></TR>";

			$key2++;
		}



		# keine Ergebnisse
		#}elseif($search){
	}elseif(!$GLOBALS["tmp"]["foldercount"]){
		echo "<TR class=\"gtabBodyTR\"><TD class=\"gtabBodyTD\" colspan=\"$colspan\" OnClick=\"alert('".$lang[1914]."')\" style=\"cursor:pointer;color:blue;\">".$lang[1915]."</TD></TR>";
	}

}


