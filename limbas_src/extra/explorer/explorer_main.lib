				}elseif($gfile["name"][$gkey] == "PERM"){
					if($ffile[$gkey][$key]){$CHECKED = "CHECKED";}else{$CHECKED = "";}
					if($filestruct["edit"][$LID]){$READONLY = "READONLY";}else{$READONLY = "";}
					echo "<TD class=\"gtabBodyTD\" VALIGN=\"TOP\" ALIGN=\"CENTER\"><DIV ID=\"td_".$key1."_".$key2."\" STYLE=\"overflow:hidden;white-space:nowrap;width:".$ffilter["rowsize"][$LID][$key1]."px;\">&nbsp;<input type=\"checkbox\" NAME=\"files_status[".$ffile["id"][$key]."][perm]\" OnChange=\"document.getElementById('filestatus_d_".$LID."_".$key."').value=2;\" $CHECKED $READONLY>&nbsp;</DIV></TD>\n";
