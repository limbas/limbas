		#echo "<TR class=\"gtabHeaderInputTR\"><TD class=\"gtabHeaderInputTD\"><input type=\"text\" ID=\"tabsearch_".$gtab["argresult_id"]["LDMS_FILES"]."_11\" name=\"fs[".$gtab["argresult_id"]["LDMS_FILES"]."_11][$fid][0]\" value=\"".$ffilter[$gtab["argresult_id"]["LDMS_FILES"]."_11"][$fid][0]."\" CLASS=\"gtabHeaderInputINP\" style=\"width:".$ffilter["rowsize"][$LID][$gtab["argresult_id"]["LDMS_FILES"]."_11"].";\"></TD>";
		if($ID){
			$onchange = "onchange=\"LmExt_Ex_RelationFields('$gtabid','$fieldid','','','$ID','','','','','','','','',this)\"";
