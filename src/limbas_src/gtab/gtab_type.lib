						$noedit = check_GtabRules($ID,$gtabid,$fieldid,$gfield[$verkn["tabid"]]["editrule"][$verkn["fieldid"]],0,$gresult);
					}
					# ----------- Argument Typfunction -----------
					if($gfield[$gtabid]["argument"][$fieldid] AND $gfield[$gtabid]["argument_typ"][$fieldid] == 15){
