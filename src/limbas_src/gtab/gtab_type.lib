		if ($gfield[$gtabid]["select_sort"][$bzm]) {$sqlquery .= " ORDER BY LMB_SELECT_W." . $gfield[$gtabid]["select_sort"][$bzm];} else {$sqlquery .= " ORDER BY LMB_SELECT_W.SORT";}
		echo "<TABLE BORDER=\"0\" CELLPADDING=\"2\" CELLSPACING=\"0\" class=\"" . $class . "\" $style>";
