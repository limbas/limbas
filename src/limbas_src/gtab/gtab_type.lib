            $attvalue = lmbdb_result($rs1, 'VALUE_NUM');
        # pool
        }else if($type == 12){
            $formtype = "<select ";
            $attvalue = lmbdb_result($rs1, 'VALUE_STRING');

            # extension
            if($gfield[$gtabid]["relext"][$bzm]){
