			echo "<option><option value=\"TRUE\" "; if($gsr[$gtabid][$gfield[$gtabid]["field_id"][$key]][0] == "TRUE"){echo " selected";} echo ">$lang[867]";
			echo "<option value=\"FALSE\" "; if($gsr[$gtabid][$gfield[$gtabid]["field_id"][$key]][0] == "FALSE"){echo " selected";} echo ">$lang[866]";
		
		# --- Auswahlfelder --
		}elseif($gfield[$gtabid]["field_type"][$key] == 4 OR $gfield[$gtabid]["field_type"][$key] == 19){
			if($gfield[$gtabid]["field_type"][$key] == 4){$sl = "SELECT";}else{$sl = "ATTRIBUTE";}
			$sqlquery = "SELECT ID,WERT FROM LMB_".$sl."_W WHERE POOL = ".$gfield[$gtabid]["select_pool"][$key]." AND HIDE = ".LMB_DBDEF_FALSE.($gfield[$gtabid]["select_sort"][$key] ? " ORDER BY ".$gfield[$gtabid]["select_sort"][$key] : '');
			$rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
			echo "<select class=\"gtabHeaderInputINP\" id=\"tdinp_".$gtabid."_".$gfield[$gtabid]["field_id"][$key]."\" $style name=\"gs[".$gtabid."][".$gfield[$gtabid]["field_id"][$key]."][0]\" $events>";
			echo "<option></option>";
			while(lmbdb_fetch_row($rs)) {
				echo "<option value=\"".lmbdb_result($rs,"WERT")."\" ";
				if(lmbdb_result($rs,"WERT") == $gsr[$gtabid][$gfield[$gtabid]["field_id"][$key]][0]){echo " selected";}
				echo ">".lmbdb_result($rs,"WERT")."</option>";
			}
		# --- ralations --
        }elseif($gfield[$gtabid]["field_type"][$key] == 11){
		    echo "<select class=\"gtabHeaderInputINP\" id=\"tdinp_".$gtabid."_".$gfield[$gtabid]["field_id"][$key]."\" $style name=\"gs[".$gtabid."][".$gfield[$gtabid]["field_id"][$key]."][0]\" $events>";
		    echo "<option>";
		    $sqlquery = "SELECT DISTINCT ".$gfield[$gfield[$gtabid]['verkntabid'][$key]]["field_name"][$gfield[$gtabid]['verknfieldid'][$key]]." FROM ".$gtab["table"][$gfield[$gtabid]['verkntabid'][$key]]." ORDER BY ".$gfield[$gfield[$gtabid]['verkntabid'][$key]]["field_name"][$gfield[$gtabid]['verknfieldid'][$key]];
		    $rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
			while(lmbdb_fetch_row($rs)) {
			    $value = lmbdb_result($rs,$gfield[$gfield[$gtabid]['verkntabid'][$key]]["field_name"][$gfield[$gtabid]['verknfieldid'][$key]]);
				echo "<option ";
				if($value == $gsr[$gtabid][$gfield[$gtabid]["field_id"][$key]][0]){echo " selected";}
