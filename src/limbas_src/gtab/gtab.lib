            foreach($gfield[$gtabid]["id"] as $key => $value){
                $val = null;
                # nur leere Felder überschreiben && Versiondescription nicht kopieren
                if($gfield[$gtabid]["copy"][$key] AND $gfield[$gtabid]["data_type"][$key] != 43 AND $gfield[$gtabid]["data_type"][$key] != 22 AND $gfield[$gtabid]["field_type"][$key] != 24 AND $gfield[$gtabid]["field_type"][$key] != 14 AND $gfield[$gtabid]["field_type"][$key] != 15){

