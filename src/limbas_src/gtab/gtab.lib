    else if(($view_query OR $view_orquery) AND (($gfield[$gtabid]["data_type"][$key] == 39 AND !$gfield[$gtabid]["longhandle"][$key]) OR $gfield[$gtabid]["field_type"][$key] == 6 OR $gfield[$gtabid]["field_type"][$key] == 20)){

