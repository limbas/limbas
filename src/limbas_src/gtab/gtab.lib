                                $sqlquery2 = "INSERT INTO $VKN_TABLE (KEYID,ERSTUSER,ERSTDATUM,$ID_FIELD,$VKN_FIELD,SORT $sql_i) VALUES($nextid," . $session["user_id"] . "," . LMB_DBDEF_TIMESTAMP . ",$ID," . $VERKN_ID . "," . $VSORT . " $sql_v)";
                            # n:m
