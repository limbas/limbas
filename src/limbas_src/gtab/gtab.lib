                        $rs1 = lmbdb_exec($db,$sqlquery1) or errorhandle(lmbdb_errormsg($db),$sqlquery1,$GLOBALS['action'],__FILE__,__LINE__);
                        if(!$rs1) {$commit = 1;}
                        $bzm1 = 1;
                        while(lmbdb_fetch_row($rs1)) {
                            $insname = "";
                            $insvalue = "";
                            if($gfield[$gtabid]["field_type"][$key] == 19){
