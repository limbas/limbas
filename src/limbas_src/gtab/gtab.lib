                            #$LEFT_TABLEID = $gfield[$gtabid]['verkntabid'][$key];
                            #$LEFT_FIELDID = $gfield[$gtabid]['hasrecverkn'][$key];
                            # default relation
                        } else {
                            $ID_FIELD = "ID";
                            $VKN_FIELD = "VERKN_ID";
                            $VKN_TABLE = $gfield[$gtabid]["md5tab"][$key];
                            $verkn_gtabid = $gfield[$gtabid]["verknparams"][$key];
                            #$LEFT_TABLEID = $gtabid;
                            #$LEFT_FIELDID = $key;
