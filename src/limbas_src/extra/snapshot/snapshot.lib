	$filter["form"] = $GLOBALS["filter"]["form"][$gtabid];
	$filter["sort"] = $GLOBALS["gfield"][$gtabid]["sort"];
    $filter["rowsize"] = $GLOBALS["gfield"][$gtabid]["rowsize"];
	$filter["gsr"] = $GLOBALS["gsr"][$gtabid];
	
	$GLOBALS["session"]["snapreminder"][$gtabid] = $filter;
}

