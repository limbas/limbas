/*------- report template ---------*/
function print_templ(LmbMpdf &$pdf, $ID, &$report) {
    global $greportlist;
    global $umgvar;
    global $db;
    global $gtab;


    #$style = &$report['style'][$el];
    $reportID = $report['report_id'];
    $reportTabID = $report['referenz_tab'];
    $templGtabid = $report['root_template'];
    #$parameter = &$report['parameter'][$el];

	$sqlquery = "SELECT CONTENT FROM {$gtab['table'][$report['root_template']]} WHERE ID = {$report['root_template_id']}";
	$rs = lmbdb_exec($db,$sqlquery);
	$content = lmbdb_result($rs, "CONTENT");

    require_once(COREPATH . 'extra/template/report/ReportTemplateConfig.php');
    TemplateConfig::$instance = new ReportTemplateConfig($report, $parameter, $ID);
    if ($GLOBALS['resolvedTemplateGroups']) {
        TemplateConfig::$instance->resolvedTemplateGroups = $GLOBALS['resolvedTemplateGroups'];
    }
    if ($GLOBALS['resolvedDynamicData']) {
        TemplateConfig::$instance->resolvedDynamicData = $GLOBALS['resolvedDynamicData'];
    }
    $baseElement = new ReportTemplateElement($templGtabid, 'lmbBaseElement', $content);
    $baseElement->resolve($ID);
    $htmlArr = $baseElement->getAsHtmlArr();

    $pdf->WriteHTML(implode('', $htmlArr));
}

# RGB Color ----------------------------
function make_color($val) {
    $val = trim($val,'#');
    $col[0] = hexdec(lmb_substr($val, 0, 2));
    $col[1] = hexdec(lmb_substr($val, 2, 2));
    $col[2] = hexdec(lmb_substr($val, 4, 2));
    return $col;
}

# --- PDF erzeugen ---------------------------------
function create_pdf(&$report, $ID) {
    global $lmbOnCreatePdf;
    global $umgvar;

    // page style
    if(is_numeric($report['page_style'][0]) AND is_numeric($report['page_style'][1])){
        $width = $report['page_style'][0];
        $height = $report['page_style'][1];
        $format = [$width, $height];
    }elseif(is_string($report['page_style'][0])){
        $format = $report['page_style'][0];
    }

    $isunicode = null;
    if($umgvar['charset'] == 'UTF-8'){$isunicode = 'utf-8';}
    $fontdir = array($umgvar['pfad'].'/inc/fonts/');
    $fonts = set_fonts(null, $report);

    $report['default_font'] = 'dejavusans';
    $report['default_font_size'] = 9;

    if(key($fonts)){
        $report['default_font'] = key($fonts);
    }

    if(!$report['dpi']){
        $report['dpi'] = 96;
    }

    $mpdf_init = array(
        'dpi'=>$report['dpi'],
        'img_dpi'=>$report['dpi'],
        'mode' => $isunicode,
        'format' => $format,
        'orientation' => $report['orientation'],
        'default_font' => $report['default_font'],
        'default_font_size' => $report['default_font_size'],
        'margin_top' => $report['page_style'][2],
        'margin_bottom' => $report['page_style'][3],
        'margin_right' => $report['page_style'][4],
        'margin_left' => $report['page_style'][5],
        'margin_header' => 0,
        'margin_footer' => 0,
        'fontDir' => $fontdir
    );

    if($fonts){
        $mpdf_init['fontdata'] = $fonts;
    }

    if($report['css']){
        $mpdf_init['defaultCssFile'] = $umgvar['path'] . $report['css'];
    }





    $pdf = new LmbMpdf($mpdf_init);

    /*
    #$pdf->setBasePath($umgvar['pfad']);
    #$pdf->useSubstitutions 		= false;
    #$pdf->simpleTables 			= true;
    #$pdf->use_kwt 				= true;


    $pdf->SetHTMLHeader('
    <div>
        My document asfdasdas dasdasd asd asd asd asd
    </div>');

    $pdf->SetHTMLFooter('
    <table width="100%">
        <tr>
            <td width="33%" style="text-align: right;">My document</td>
        </tr>
    </table>');
    */


    if(!$isunicode) {
        $pdf->charset_in = $umgvar['charset'];
    }


    # Fußumbruch bei vorhandenen Fußelementen
    //SetPageBreak($pdf, $report['footerpos'], $report);

    $pdf->rp = $rp;
    $pdf->report = &$report;
    $pdf->report_id = $report['report_id'];
    $pdf->ID = $ID;

    // callback to modify pdf or elements
