		if($pass AND $user){
			$pass = crypt($pass);
			$passgrp[] = "{$user}:{$pass}\n";
		}
		
		if($passgrp){
			$htaccess_file = fopen(TEMPPATH.'/.htaccess',"w");
			$value = "AuthName \"$user\"\nAuthType Basic\nAuthUserFile ".TEMPPATH."/.htpasswd\nrequire valid-user\nallow from all";
			if ($htaccess_file) {
				fputs($htaccess_file,$value);
				fclose($htaccess_file);
			}
			

