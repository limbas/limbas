function menu_get_admin_workflow(){
    global $gwfl;

    $menu = array();

    $bzm = 0;
    if($gwfl){
        foreach ($gwfl as $wflid => $wfl){
            $menu[$bzm]["name"] = $wfl['name'];
            $menu[$bzm]["desc"] = $wfl['desc'];
            $menu[$bzm]["link"] = "main_admin.php?action=setup_workflow&wflid=$wflid";
            $menu[$bzm]["child"] = null;
            $bzm++;
        }
    }

    return $menu;
}

