function menu_get_standard($id, $bzm){
	global $LINK;
	global $lang;

	$menu = array();

	$menu[$bzm]["name"] = $lang[$LINK["name"][$id]] ? $lang[$LINK["name"][$id]] : $LINK["name"][$id];
	$menu[$bzm]["desc"] = $lang[$LINK["desc"][$id]] ? $lang[$LINK["desc"][$id]] : $LINK["desc"][$id];
	$menu[$bzm]["id"] = $id;
	if($LINK["link_url"][$id]){
		$menu[$bzm]["link"] = $LINK["link_url"][$id];
	}elseif($LINK["extension"][$id]){
	    $menu[$bzm]["link"] = 'main.php?action='.$GLOBALS['LINK_ACTION'][$id];
    }
	$menu[$bzm]["bg"] = $LINK["bg"][$id];
	$menu[$bzm]["icon"] = $LINK["icon_url"][$id];
	$menu[$bzm]["gicon"] = $LINK["gicon"][$id];
	$menu[$bzm]["child"] = null;

	return $menu;
}



# tables Snapshots
function menu_get_snapshots($tabid, $depth = null){
	global $gsnap;

	$menu = array();
	if($gsnap[$tabid]["id"]){
        foreach ($gsnap[$tabid]["id"] as $key => $value){
            if($gsnap[$tabid]["type"][$key] == 2){continue;}
            $menu[] = menu_get_snapshot($tabid, $value, $depth);
	    }
	}
	return $menu;
}

function menu_get_snapshot($tabid, $snapid, $depth = null) {
    global $gsnap;

    # check privilege
    if (!$gsnap[$tabid]) {
        return null;
    }

    $menu = array();
    $menu["depth"] = $depth;
    $menu["name"] = $gsnap[$tabid]["name"][$snapid];
    $menu["desc"] = $gsnap[$tabid]["name"][$snapid] . " ($snapid)";
    $menu["link"] = "main.php?action=gtab_erg&gtabid=$tabid&snap_id=".$snapid."&frame_type=1";
    $menu["icon"] = " lmb-icon-8 lmb-camera ";
    $menu["child"] = null;
    $menu["attr"] = 'data-lmb-type="snap" data-lmb-id="' . $snapid . '" data-lmb-tabid="' . $tabid . '"';
    return $menu;
}

# tables formulars
function menu_get_forms(int $tabId, bool $isAdmin, $depth = null): array
{
    
    $forms = Form::all(['REFERENZ_TAB'=>$tabId]);
    
	$menu = [];
    foreach ($forms as $form){
        $menu[] = menu_get_form( $form->id, $isAdmin, $depth,  $form);
    }
    
	return $menu;
}

function menu_get_form(int $formId, bool $isAdmin = false, $depth = null, Form $form = null): ?array
{
    global $gformlist;
    
    
    if($form === null) {
        $form = Form::get($formId);
    }

    # check privilege
    if (!$gformlist[$form->gtabId]) {
        return null;
    }

    $menu = [];
    if (!$isAdmin) {
        
        # hidden form
        if ($gformlist[$form->gtabId]['hidden'][$form->id]) {
            return null;
        }
        # not list-form
        if($form->formType === FormType::DETAILS){
            return null;
        }

        if($form->gtabId){
            $menu['link'] = 'main.php?action=gtab_erg&gtabid=' . $form->gtabId . '&form_id=' . $form->id . '&HEADER='.urlencode($form->name)."&ID=0";
        }else{
            $menu["link"] = 'main.php?action=gtab_form&form_id=' . $form->id . '&HEADER='.urlencode($form->name);
        }
    } else {
        
        if($form->mode === FormMode::NEW) {
            $menu['link'] = 'main_admin.php?action=setup_form_show&id=' . $form->id;
        } else {
            $menu['link'] = 'main_admin.php?action=setup_form_frameset&form_typ=' . $form->formType->value . '&form_id=' . $form->id . '&referenz_tab=' . $form->gtabId . '&type=form';
        }
        
        
    }

    $menu['depth'] = $depth;
    $menu['name'] = $gformlist[$form->gtabId]['name'][$form->id];
    $menu['desc'] = $gformlist[$form->gtabId]['name'][$form->id] . " ($form->id)";
    $menu['icon'] = $form->formType === FormType::SEARCH ? ' fa-search' : ' lmb-icon-cus lmb-icon-8 lmb-form ';
    $menu['child'] = null;
    $menu['attr'] = 'data-lmb-type="form" data-lmb-id="' . $form->id . '" data-lmb-tabid="' . $form->gtabId . '"';

    return $menu;
}

# tables reports
function menu_get_reports($tabid, $typ, $depth = null){
	global $greportlist;

	$menu = array();
	if($greportlist[$tabid]["id"]){
        foreach ($greportlist[$tabid]["id"] as $key => $value){
            if ($greportlist[$tabid]['is_template'][$key]) {
                continue;
            }
            $menu[] = menu_get_report($tabid, $value, $typ, $depth);
        }
	}
	return $menu;
}

function menu_get_report($tabid, $reportid, $typ = 1, $depth = null) {
    global $greportlist;

    # check privilege
    if (!$greportlist[$tabid]) {
        return null;
    }

    $menu = array();
    if($typ == 1){
        if($greportlist[$tabid]["hidden"][$reportid]){
            return null;
        }
        if(!$greportlist[$tabid]["listmode"][$reportid]) {
            return null;
        }

        $menu["link"] = "print_report($tabid,$reportid,'".$greportlist[$tabid]["defformat"][$reportid]."');";
    }else{
        $menu["link"] = "main_admin.php?action=setup_report_frameset&report_id=$reportid&referenz_tab=$tabid&type=report";
    }

    $menu["depth"] = $depth;
    $menu["name"] = $greportlist[$tabid]["name"][$reportid];
    $menu["desc"] = $greportlist[$tabid]["name"][$reportid] . " ($reportid)";
    if(in_array($greportlist[$tabid]["defformat"][$reportid], array("pdf", "odt", "xml"))){
        $menu["icon"] = " lmb-icon-8 lmb-".$greportlist[$tabid]["defformat"][$reportid]." ";
    }else{
        $menu["icon"] = " lmb-icon-8 lmb-pdf ";
    }
    $menu["child"] = null;
    $menu["attr"] = 'data-lmb-type="rep" data-lmb-id="' . $reportid . '" data-lmb-tabid="' . $tabid . '"';

    return $menu;
}

