function menu_get_admin_forms(){
	global $gtab;
    global $lang;

    $output = [];
    
    $forms = Form::all();
    $currentGtabId = null;
    foreach ($forms as $form) {
        if ($currentGtabId !== $form->gtabId) {
            $currentGtabId = $form->gtabId;
            if ($gtab['table'][$currentGtabId]) {
                $name = $gtab['desc'][$currentGtabId];
            } else {
                $name = $lang[1986];
            }
            
            $output[$form->gtabId] = [
                'depth' => 0,
                'parent' => 0,
                'name' => $name,
                'desc' => '',
                'link' => '',
                'icon' => 'lmb-table',
                'header' => 1,
                'child' => [],
            ];
            
        }

        $output[$form->gtabId]['child'][] = menu_get_form($form->id, true, form: $form);
    }
    
	return $output;
}


