			WHERE POOL=".$gfield[$atid]['select_pool'][$fieldid];
		$mrs = lmbdb_exec($db,$msqlquery) or errorhandle(lmbdb_errormsg($db),$msqlquery,$action,__FILE__,__LINE__);
		if(!$mrs) {$commit = 1;}

		$bzm = 1;
