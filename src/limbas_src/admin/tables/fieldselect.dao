/*
 *  update table entries
 */
function lmb_selectPoolTableUpdate($pool,$id,$typ,$langid,$value,$oldvalue){
    global $db;
    global $DBA;
    global $gfield;
    global $gtab;

	$sqlquery = "SELECT TAB_ID,FIELD_ID FROM LMB_CONF_FIELDS WHERE (DATA_TYPE = 12 OR DATA_TYPE = 14) AND FIELD_TYPE = 4 AND SELECT_POOL = $pool";
	$rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
	while(lmbdb_fetch_row($rs)) {

        $gtabid = lmbdb_result($rs, 'TAB_ID');
        $fieldid = lmbdb_result($rs, 'FIELD_ID');

        $fieldname = Dbf::handleCaseSensitive($gfield[$gtabid]['field_name'][$fieldid]);
        if($langid){
            $fieldname = Dbf::handleCaseSensitive('LANG'.$langid.'_'.$fieldname);
        }

        $odbc_column = Dbf::getColumns($DBA["DBSCHEMA"], $gtab['table'][$gtabid] ?? '', $fieldname);
        if($odbc_column['columnname_lower'][0] == $fieldname) {
            $sqlquery1 = "UPDATE " . $gtab['table'][$gtabid] . " SET $fieldname = '" . parse_db_string($value) . "' WHERE $fieldname = '" . parse_db_string($oldvalue) . "'";
            $rs1 = lmbdb_exec($db, $sqlquery1) or errorhandle(lmbdb_errormsg($db), $sqlquery1, $action, __FILE__, __LINE__);
            if (!$rs1) {
                return false;
            }
        }else{
             return false;
        }

    }

    return true;

}

function lmb_selectPoolUpdate($pool,$id,$typ,$langid){
    global $db;
    global $select_color;
    global $select_keyw;

    $fieldname = 'WERT';
    $value = $GLOBALS['select_wert'][$id];
    if($langid && is_numeric($langid)){
        $fieldname = Dbf::handleCaseSensitive('LANG'.$langid.'_WERT');
        $value = $GLOBALS['select_wert_'.$langid][$id];
    }

    $update[$fieldname] = parse_db_string(trim(str_replace("\t",'',str_replace("\n",'',$value))),160);
    $update['KEYWORDS'] = parse_db_string(trim(str_replace("\t",'',str_replace("\n",'',$select_keyw[$id]))),250);
    $update['COLOR'] = parse_db_string($select_color[$id]);

    foreach($update as $key => $cvalue){
         $sql[] = $key ." = '$cvalue'";
    }

    // update pool values
    $sqlquery = "SELECT * FROM ".$typ."_W WHERE ID = $id AND POOL = ".$pool;
    $rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
    if(!$rs) {
        return false;
    }
    $oldvalue = lmbdb_result($rs, $fieldname);

    $sqlquery = 'UPDATE '.$typ.'_W SET '.implode(',',$sql)." WHERE ID = $id AND POOL = $pool";
    $rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
    if(!$rs) {
        return false;
    }

    if(!lmb_selectPoolTableUpdate($pool,$id,$typ, $langid,$value, $oldvalue)){
        return false;
    }

    return true;

}

