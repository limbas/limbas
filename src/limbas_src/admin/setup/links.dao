        $sqlquery1 = "INSERT INTO LMB_RULES_ACTION (ID,LINK_ID,GROUP_ID,PERM) VALUES (" . $NEXTID . "," . $NEXTLID . "," . lmbdb_result($rs, "GROUP_ID") . ",$perm)";
