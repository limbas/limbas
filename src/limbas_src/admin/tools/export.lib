				}
			}

			#/* ---> tab  */ fputs($table_datei,"\n");
			/* ---> conf */ fputs($config_datei,"<end tabledefinition>\n\n");

			/* --- Inhalt_Liste --------------------------------------------- */
			if (!$configonly){
				if($export_filter AND !is_array($export_filter)){$expf = $export_filter;}
				elseif($export_filter[$bzm0]){$expf = $export_filter[$bzm0];}
				else{$expf = "";}
