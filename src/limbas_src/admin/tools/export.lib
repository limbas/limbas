		/* ---> conf */ fputs($config_datei,"<end tabledefinition>\n\n");

        /* --- Inhalt_Liste --------------------------------------------- */
        if (lmb_substr($table, 0, 10) != "LMB_INDIZE" AND lmb_substr($table, 0, 11) != "LMB_HISTORY") {
