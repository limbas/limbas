		INHALT,
		DBFIELD,
		VERKN_BAUM,
		STYLE,
		DB_DATA_TYPE,
		SHOW_ALL,
		BERICHT_ID,
		Z_INDEX,
		LISTE,
		TAB,
		TAB_SIZE,
		TAB_EL_COL,
		TAB_EL_ROW,
		TAB_EL_COL_SIZE,
		HEADER,
		FOOTER,
		PIC_TYP,
		PIC_STYLE,
